<div class="outer-wrapper">
  <div class="card">
    <div class="container">
        <h1><% @lists.list_name %></h1>
          <table class="table">
              <thead>
                  <tr>
                      <th>List ID</th>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Status</th>
                      <th>Edit</th>
                  </tr>
              </thead>
              <tbody>
                  <tr>
                      <td> <%=@lists.id%></td>
                      <td> <%=@lists.list_name%>  </td>
                      <td> <%=@lists.description%>  </td>
                      <td> <%=@lists.status%>  </td>
                      <td> <%=link_to 'Edit', edit_list_path(id: @lists.id)%> </td>
                  </tr>
              </tr>
          </tbody>
      </table>
    </div>

    <div class="container">
      <h3>Contacts In List</h3>
      <%= link_to "Add Contact", new_contact_path %>
      <table class="table">
          <thead>
              <tr>
                  <th>Contact ID</th>
                  <th>Last Name</th>
                  <th>First Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Company</th>
                  <th>Link</th>
                  <th>Edit</th>
              </tr>
          </thead>
          <tbody>
              <% @contacts.each do |contact|%>
              <tr>
                  <td> <%=contact.id%></td>
                  <td> <%=contact.last_name%>  </td>
                  <td> <%=contact.first_name%>  </td>
                  <td> <%=contact.email%>  </td>
                  <td> <%=contact.phone%>  </td>
                  <td> <%=contact.company%>  </td>
                  <td> <%=link_to 'More Info', contact_path(id: contact.id)%> </td>
                  <td> <%=link_to 'Update Contact', edit_contact_path(id: contact.id)%> </td>
              </tr>
              <%end%>
          </tr>
      </tbody>
  </table>


    </div>
  </div>
</div>
